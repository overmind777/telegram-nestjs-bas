generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  idTelegram Int      @unique
  name       String
  phone      String
  address    String
  notes      String
  createAt   DateTime @default(now())
  lastOrder  DateTime @updatedAt

  @@map("users")
}

model Order {
  id       String   @id @default(uuid())
  goods    String
  volume   String
  quantity Int
  owner    String
  creatAt  DateTime @default(now())

  @@map("orders")
}
